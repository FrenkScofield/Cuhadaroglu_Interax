</div>





<script>
    $(function () {


        getGrid();
        function getGrid() {
            var columns = [];


            columns.push({ "data": "Id", text: "ID" });
            columns.push({ "data": "Name", text: "Başlık" });
            columns.push({ "data": "ParentName", text: "Üst Kategori" });

            columns.push({ "data": "Detail", text: "Detail" });


            $.each(columns, function (i, item) {
                $(dt_ContentPage + ' thead tr').append('<td> ' + item.text + '</td > ');
            });

            var table = $(dt_ContentPage).DataTable({
                "ajax": {
                    "url": '/' + controllerName_Content + '/GetPaging',
                    "type": "POST",
                    "datatype": "json",
                    "data": function (searchModel) {
                        $(dt_ContentPage).LoadingOverlay("show");
                        searchModel.selectid = selecttype_ContentPage;
                    },
                    "dataSrc": function (json) {
                        return_data = new Array();
                        var data = json.data;

                        var website = siteConfig.BaseUrl;

                        $.each(data, function (i, row) {

                            var detail = '<a class="btn btn-sm btn-clean btn-icon btn-icon-md" href="/' + controllerName_Content + '/InsertOrUpdatePage?id=' + row.Id + '&' + 'selectid=' + row.Id + '" title="Edit"><i class="la la-edit"></i></a>';

                            detail += '<a target="_blank" class="btn btn-sm btn-clean btn-icon btn-icon-md" href="' + website + row.Link + '" title="Önizleme"><i class="fa fa-eye"></i></a>';




                            return_data.push({
                                'Id': row.Id,
                                'Name': row.Name,
                                'ParentName': (row.Parent != null ? row.Parent.Name : ""),
                                'Detail': detail,
                            });

                        });
                        $(dt_ContentPage).LoadingOverlay("hide");
                        return return_data;
                    }
                },
                "fnDrawCallback": function (settings, json) {


                    $(dt_ContentPage).LoadingOverlay("hide");
                    ayarlar();
                },
                "destroy": true,
                "caseInsensitive": true,
                "responsive": true,
                "pageLength": 100,
                "DisplayLength": 5,
                "lengthMenu": [[100, 25, 100, 1000, 2500, 5000], [100, 25, 100, 1000, 2500, 5000]],
                "lengthChange": true,
                "processing": true,
                "columns": columns,
                "order": [[0, "desc"]],
                rowReorder: true,
                columnDefs: [
                    { orderable: true, className: 'reorder', targets: 0 },
                    { orderable: false, targets: '_all' }
                ],
            });
            table.on(dt_ContentPage + ' row-reorder.dt', function (dragEvent, diff, nodes) {
                var myArray = [];
                for (var i = 0, ien = diff.length; i < ien; i++) {
                    var rowData = table.row(diff[i].node).data(); myArray.push({ id: rowData.Id, OrderNo: diff[i].newPosition, dataid: selecttype_ContentPage });
                }
                $.ajx('/' + controllerName_Content + '/UpdateOrder', { postModel: myArray }, function (resultData) { table.ajax.reload(); $(table).LoadingOverlay("hide"); });
            });

        }
    });
</script>




