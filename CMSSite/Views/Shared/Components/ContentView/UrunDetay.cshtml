                                            <h3 class="sep-line-one">
                                                @Html.Raw(content.FormType.DescName)
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <!-- TITLE END -->
                                <div class="sx-icon-box-wraper left p-b30">
