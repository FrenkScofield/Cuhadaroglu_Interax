                                    <div class="icon-content">
                                        <h5 class="m-t0">Telefon</h5>
                                        <p>@Html.Raw(SessionRequest.config.Phone)</p>
                                    </div>
                                </div>

                                <div class="sx-icon-box-wraper left p-b30">
                                    <div class="icon-xs"><i class="fa fa-envelope"></i></div>
                                    <div class="icon-content">
                                        <h5 class="m-t0">Mail</h5>
                                        <p>@Html.Raw(SessionRequest.config.Mail)</p>
                                    </div>
                                </div>

